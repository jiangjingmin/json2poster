/* pages/textarea/textarea.wxss */
.container{
  width: 100%;
  background-color: #fff;
  padding-top: 122rpx;
  padding-bottom: 120rpx;
}
.textarea-wrp{
  overflow-y: auto;
}
textarea {
  display: block;
  width: 690rpx;
  min-height: 32rpx;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  line-height: 32rpx;
}
.img-view{
  width: 690rpx;
  margin: 10rpx auto;
  position: relative;
}
.img-view image{
  vertical-align: top;
}
.icon-del{
  width: 40px;
  height: 40px;
  padding: 5px;
  background-color: rgba(0, 0, 0, 0.2);
  position: absolute;
  right: 0;
  top: 0;
  z-index: 999;
}

.edit-tbns{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #ededed;
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  transition: all 0.1s ease-in-out;
}
.edit-tbns .edit-item{
  width: 30%; 
  align-items: center;
}
.edit-tbns .edit-item:nth-child(2){
  margin-right: 10%; 
}
.edit-tbns .icon-img{
  width: 40rpx;
  height: 40rpx;
  vertical-align: top;
  margin: 25rpx auto 0;
}
.edit-tbns button{
  background: none;
  padding: 0;
}
.edit-tbns button::after{
  display: none;
}
.button-hover{
  background: none;
}
.edit-tbns .make {
  width: 175rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: rgba(192, 193, 193, 1);
  border-radius: 10rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin-top: 10rpx;
}
.active {
  background: #007AE6!important;
}

.custom-header{
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.custom-title{
  width: 100%;
  margin-top: 64rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #000;
  text-align: center;
}
.goback {
  width: 64rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, .5); 
  border: 1px solid #eaeaea;
  position: fixed;
  top: 48rpx;
  left: 25rpx;
  z-index: 9999999;
  text-align: center;
}
.goback .img-back {
  width: 32rpx;
  height: 32rpx;
  vertical-align: top;
  margin-top: 18rpx;
  margin-left: 12rpx;
}