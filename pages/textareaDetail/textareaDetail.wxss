/* pages/richtext/richtext.wxss */
.container{
  width: 100%;
  background-color: #fff;
  padding-top: 140rpx;
  padding-bottom: 150rpx;
}
.textarea-wrp{
  overflow-y: auto;
}
textarea {
  display: block;
  width: 690rpx;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  line-height: 32rpx;
}

.img-view{
  width: 690rpx;
  margin: 0 auto;
  margin-top: 10rpx;
  position: relative;
}
.img-view image{
  vertical-align: top;
}

.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 120rpx;
  background: rgba(255, 255, 255, 1);
  /* box-shadow:0px -3px 6px 0px rgba(0,20,119,0.15); */ /* covor-view 不支持box-shadow、border等属性 */
  border-top: 1px solid #eaeaea;
  z-index: 100;
}
.bottom-line{
  width: 100%;
  height: 1px;
  background-color: #eaeaea;
  position: absolute;
  left: 0;
  top: -1px;
  z-index: 1;
}
.bottom .bottom-item{
  width: 50%; 
  align-items: center;
}
.bottom .btn-item{
  width: 317rpx;
  height: 80rpx;
  line-height: 78rpx;
  margin: 20rpx auto;
  border-radius: 40rpx;
  border:3rpx solid rgba(0, 122, 230, 1);
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
  color:rgba(0,122,230,1);
  background-color: #fff;
}
.bottom  button{
  background: none;
  padding: 0;
}
.bottom  button::after{
  display: none;
}
.bottom .button-hover{
  background: none;
}
.bottom .bottom-button {
  margin-left: 88rpx;
  font-size: 32rpx;
  text-align: left;
  color: rgba(0, 122, 230, 1);
}
.bottom .bottom-item:nth-child(1) .bottom-button {
  margin-left: 108rpx;
}
.bottom .icon-wechart{
  width: 49rpx;
  height: 39rpx;
  margin-right: 10rpx;
  vertical-align: top;
  margin-top: 19rpx;
  margin-left: 50rpx;
  float: left;
}
.bottom .icon-circlefriend{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  vertical-align: top;
  margin-top: 20rpx;
  margin-left: 30rpx;
  float: left;
}
.goback {
  width: 64rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, .5); 
  border: 1px solid #eaeaea;
  position: fixed;
  top: 48rpx;
  left: 25rpx;
  z-index: 9999999;
  text-align: center;
}
.goback .img-back {
  width: 32rpx;
  height: 32rpx;
  vertical-align: top;
  margin-top: 18rpx;
  margin-left: 12rpx;
}