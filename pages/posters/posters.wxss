/* pages/poster/poster.wxss */
.poster-container{
  padding-top: 140rpx;
  padding-bottom: 50rpx;
}
.imgbox{
  width: 650rpx;
  margin: 0 auto;
  text-align: center;
  border-radius: 25rpx;
  box-shadow: 0px 10rpx 24rpx 0px 
    rgba(0, 28, 121, 0.3);
  overflow: hidden;
}
.pagebg{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;
  opacity: .8;
}
.footer {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  background-color: rgba(255, 255, 255, 1);
  /* box-shadow: 0 -1px 8px #9a9a9a; */
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999999999;
}
.btn-cancel {
  font-size: 36rpx;
  color: #333;
}
.finish {
  line-height: 1;
}
.btn-finish {
  font-size: 36rpx;
  color: #666;
  margin-top: 28rpx;
}
.shareintro {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}