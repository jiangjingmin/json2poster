/* pages/poster/poster.wxss */
.poster-container{
  padding-top: 140rpx;
}
.pagebg{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;
  opacity: .8;
}
.goback {
  width: 64rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, .5); 
  border: 1px solid #e5e5e5;
  position: fixed;
  top: 48rpx;
  left: 25rpx;
  z-index: 9999999;
  text-align: center;
}
.goback image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: top;
  margin-top: 18rpx;
  margin-left: -6rpx;
}
