/**index.wxss**/
.info {
  margin: 50rpx auto;
  font-size: 32rpx;
}
.items{
  width: 690rpx;
  margin: 0 auto;
}
.item{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #666;
  border-bottom: 1px solid #eaeaea;
}
.item:first-child{
  border-top: 1px solid #eaeaea;
}
.item text{
  font-size: 60rpx;
  color: #999;
  float: right;
}

.mymod{
  width: 100%;
  /* height: 100%; */
  background: rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 99;
  overflow-y: auto;
}
.share-card-box{
  width: 650rpx;
  margin: 50rpx auto;
} 
.imgbox{
  background: #fff;
  margin: 0 auto;
  text-align: center;
  border-radius: 0 0 25rpx 25rpx;
  box-shadow: 0px 10rpx 24rpx 0px 
    rgba(0, 28, 121, 0.3);
  position: relative;
  overflow: hidden;
}
.imgbox .img-upload{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 82rpx;
  height: 82rpx;
  background-color: rgba(51, 51, 51, .6);
  border-radius: 50%;
}
.imgbox .img-upload view {
  width: 80rpx;
  height: 75rpx;
  margin: 6rpx auto;
}
.imgbox .img-upload image {
  width: 100%;
  height: 100%;
}
.sk-box{
  width: 100%;
  height: 880rpx;
}
.sk-box .skeleton-rect{
  background-color: rgba(248, 248, 248, 1);
}
.sk-box .sk-header{
  width: 100%;
  height: 590rpx;
}
.sk-box .sk-intro{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 50rpx 30rpx;
}
.sk-box .sk-intro .sk-left{
  width: 75%;
}
.sk-box .sk-intro .sk-left view{
  width: 80%;
  height: 30rpx;
  margin-top: 10rpx;
  background-color: rgba(248, 248, 248, .6);
}
.sk-box .sk-intro .sk-left view:first-child{
  width: 50%;
  height: 40rpx;
  margin-top: 0;
  padding-bottom: 20rpx;
  background-color: rgba(248, 248, 248, 1);
}
.sk-box .sk-intro .sk-right view:nth-child(1){
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 0 auto;
}
.sk-box .sk-intro .sk-right view:nth-child(2){
  width: 150rpx;
  height: 22rpx;
  margin-top: 10rpx;
  background-color: rgba(248, 248, 248, .6);
}

.canvas-img{
  vertical-align: top;
}

.errmod{
  width:329rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 49rpx 0px rgba(5,0,75,0.16);
  border-radius:17rpx;
  text-align: center;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%)
}
.errmod .bd{
  padding: 40rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.3);
}
.errmod image{
  width: 126rpx;
  height: 105rpx;
  margin-top: 20rpx;
}
.errmod text{
  font-size:30rpx;
  line-height:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(0,0,0,0.3);
  margin: 29rpx auto 44rpx auto;
}
.newcreatebtn{
  height:94rpx;
  line-height:94rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(0,136,255,1);
}

.footer {
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 36rpx;
  margin: 50rpx auto 0 auto;
}
.cancel{
  background-color: rgba(255, 255, 255, 1);
  border-radius: 16rpx;
}
.btn-cancel {
  color: #333;
}
.finish {
  background-color: rgba(0, 136, 255, 1);
  border-radius: 16rpx;
}
.btn-finish {
  color: #fff;
}