<cax id="{{caxId}}" showCanvas="{{showCanvas}}" style="position: fixed;top: -10000px;"></cax>

<view class="container">
  <view class="imgbox">
    <image class="canvas-img" style="width: 650rpx;height: 990rpx;" src="{{imageUrl || './images/skeleton.png'}}" alt="" mode="widthFix"></image>
  </view>
</view>

<view class="errmod" wx:if="{{noCreated}}">
  <view class="bd">
    <view>
      <image src="./images/errimg.png" ></image>
    </view>
    <view>  
      <text>生成图片失败</text>
    </view>
  </view>
  <view class="newcreatebtn" bindtap="onCreate">点击重新生成</view>
</view>

<view class="footer">
  <view class="cancel" wx:if="{{!isFinish}}" bindtap="onHandelCancel">
    <text class="btn-cancel">取 消</text>
  </view>
  <view class="finish" wx:else bindtap="onHandelCancel">
    <view class="btn-finish">完 成</view>
    <view class="shareintro">（分享图片至朋友圈或好友）</view>
  </view>
</view>