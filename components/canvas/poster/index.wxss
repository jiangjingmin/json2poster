.container{
  padding-top: 140rpx;
  padding-bottom: 150rpx;
}
.imgbox{
  width: 650rpx;
  margin: 0 auto;
  text-align: center;
  border-radius: 25rpx;
  box-shadow:0px 0px 22rpx 3rpx rgba(26,16,56,0.38);
}
.canvas-img{
  vertical-align: top;
  border-radius: 25rpx;
}

.errmod{
  width:329rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 49rpx 0px rgba(5,0,75,0.16);
  border-radius:17rpx;
  text-align: center;
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%)
}
.errmod .bd{
  padding: 40rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.3);
}
.errmod image{
  width: 126rpx;
  height: 105rpx;
  margin-top: 20rpx;
}
.errmod text{
  font-size:30rpx;
  line-height:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(0,0,0,0.3);
  margin: 29rpx auto 44rpx auto;
}
.newcreatebtn{
  height:94rpx;
  line-height:94rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(0,136,255,1);
}

.footer {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  background-color: rgba(255, 255, 255, 1);
  /* box-shadow: 0 -1px 8px #9a9a9a; */
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999999999;
}
.btn-cancel {
  font-size: 36rpx;
  color: #333;
}
.finish {
  line-height: 1;
}
.btn-finish {
  font-size: 36rpx;
  color: #666;
  margin-top: 28rpx;
}
.shareintro {
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}